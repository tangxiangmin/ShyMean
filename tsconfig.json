{
  "compilerOptions": {
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "esnext",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
    },
    "esm": true
  },
  "include": [
    "./**/*"
  ],
}
