<article class="article article-detail">
    <header class="text-center">
        <h2 class="article_hd"><%= page.title %></h2>
        <div class="article_info">
            <span class="hide-sm">发表于</span>
            <span class="show-sm">
                <i class="iconfont icon-archives"></i>
            </span>
            <time><%= date(page.date, 'YYYY/M/D H:mm:s') %></time>
            |
            <span class="hide-sm">分类于</span>
            <span class="show-sm"><i class="iconfont icon-tag"></i></span>
            <% page.categories.each(function(item, i){ %>
                <a href="<%= url_for('/categories/' + item.name)%>" class="hover-highlight"><%= item.name %></a>
            <% }) %>

        </div>
    </header>
    <div class="article_ct">
        <%- page.content %>
    </div>
    <footer class="article_ft">
        <% page.tags.each(function(item, i){ %>
        <a href="<%= url_for('tags/'+item.name) %>" class="article_tag">#<%= item.name %></a>
        <% }) %>
    </footer>

    <div class="article_nav"><a href="/article/mockjs使用心得" class="hover-highlight article_prev">mockjs使用心得</a><a
                href="/article/博客SSR实践总结" class="hover-highlight article_next">博客SSR实践总结</a></div>
</article>