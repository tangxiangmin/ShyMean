  "license": "ISC",
  "dependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/mysql2": "github:types/mysql2",
    "koa": "^2.13.4",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.3",
    "koa-views": "^6.3.1",
    "mysql2": "^1.7.0",
    "rss": "^1.2.2"
  }
}
