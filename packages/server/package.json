{
  "name": "shymean-server",
  "version": "1.0.0",
  "description": "shymean blog api server",
  "main": "index.js",
  "scripts": {
    "dev": "export NODE_ENV=development && nodemon --watch 'server/**/*' -e ts,tsx --exec ts-node ./src/index.ts",
    "build": "tsc ./src/index.ts --outDir app",
    "start": "export NODE_ENV=production && pm2 start --interpreter ./node_modules/.bin/ts-node ./src/index.ts --name='blog'"
  },
